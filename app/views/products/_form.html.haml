= simple_form_for(@product) do |f|
  = f.input :name
  = f.input :kind, collection: ['Television Set', 'Vacuum Cleaner', 'Washer', 'Iron'],  include_blank:false
  = f.input :date_of_issue, as: :date
  = f.input :price
  = f.input :number
  = f.input :guarantee_period
  = f.input :specific_characteristic, collection: ['Diagonal', 'Power', 'Size'],  include_blank:false
  = f.input :specific_characteristic_value

  %br
  = f.association :manufacturer, include_blank: false, collection:  Manufacturer.all.order(:name).collect{|s| [s.name, s.id]}, input_html: { class: "chosen" }


  %hr
    = f.button :submit, class: 'btn btn-primary'