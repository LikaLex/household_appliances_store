
%html
%head
  %title Household Appliances Store
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  = csrf_meta_tags

%body
  %nav.navbar.navbar-default
    .container
      .navbar-brand= link_to "Manufacturers", root_path

      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Products", products_path
        %li= link_to "Stores", stores_path
        %li= link_to "Seller", sellers_path
        %li= link_to "Storages", storages_path
        %li= link_to "Commodity Units", commodity_units_path


  .container
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert"

    = yield